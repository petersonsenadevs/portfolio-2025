---
import Layout from "../layouts/Layout.astro";
import SimpleLayout from "../layouts/SimpleLayout.astro";

---

<SimpleLayout title="404" description="Page not found">
   <section class="flex items-center justify-center h-screen">
    <div class="text-center">
      <h1 class="text-4xl font-bold mb-4 min-h-[36px]">
        <span class="en">404: Page Not Found</span>
        <span class="es hidden">404: Página no encontrada</span>
      </h1>
      <p class="text-gray-600 dark:text-gray-400 mb-6 min-h-[28px]">
        <span class="en">The requested page could not be found.</span>
        <span class="es hidden">La página solicitada no pudo ser encontrada.</span>
      </p>
      <a href="/" class="px-8 py-3 bg-[color:var(--color-primary)] dark:[color:var(--color-background-alt)] text-white rounded-lg hover:opacity-90 transition-opacity">
        <span class="en">Go Home</span>
        <span class="es hidden">Ir a la página principal</span>
      </a>
    </div>
  </section>
</SimpleLayout>