---
import { translations } from '../../i18n/translations';
import Image from 'astro/components/Image.astro';
import coder from '../../assets/coder2.jpg';
---
<section id="home" class="relative min-h-screen flex items-center justify-center py-20">
  <!-- Hero background image -->
  <div class="absolute inset-0 z-0">

    <Image src={coder} alt="Developers working" class="w-full h-full object-cover" format="jpg" loading={"eager"} />

    <!-- Overlay -->
    <div class="absolute inset-0 bg-black/50"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white">
    <h1 class="text-4xl sm:text-6xl font-bold mb-6">

      <span class="es">{translations.hero.title.es}</span>
      <span class="en hidden">{translations.hero.title.en}</span>
    </h1>
    <p class="text-xl sm:text-2xl mb-8 text-gray-200">
      <span class="es">{translations.hero.subtitle.es}</span>
      <span class="en hidden">{translations.hero.subtitle.en}</span>
    </p>
    <div class="flex justify-center gap-4">
      <button
        onclick="document.getElementById('contact').scrollIntoView({ behavior: 'smooth' })"
        class="px-8 py-3 bg-[color:var(--color-primary)] dark:[color:var(--color-background-alt)] text-white text-sm font-medium rounded-lg hover:opacity-90 transition-opacity"
      >
        <span class="es">{translations.hero.buttons.contact.es}</span>
        <span class="en hidden">{translations.hero.buttons.contact.en}</span>
      </button>
      <button
        onclick="document.getElementById('projects').scrollIntoView({ behavior: 'smooth' })"
        class="px-8 py-3 border-2 border-white text-white rounded-lg hover:bg-white/20 transition-colors"
      >
        <span class="es">{translations.hero.buttons.projects.es}</span>
        <span class="en hidden">{translations.hero.buttons.projects.en}</span>
      </button>
    </div>
  </div>
</section>

